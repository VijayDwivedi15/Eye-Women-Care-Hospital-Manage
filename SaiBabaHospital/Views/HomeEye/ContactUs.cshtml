    </div><!-- Row /-->
</div>


<!-- Content Area -->
<div class="content-area contact-page">
    <div class="row">

        <div class="medium-3 small-12 columns">
            <img src="~/HospitalDemoEye/images/Doctors/drAshish.jpg" alt="">
            <br><br>
            <h4>Meet Us</h4>
